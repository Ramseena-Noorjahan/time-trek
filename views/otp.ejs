                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Verify OTP</p>
  
                  <form class="mx-1 mx-md-4" action="/otp" method="post">
  
                    
  

                    
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="password" class="form-control" name="otp" required />
                        <label class="form-label" for="form3Example4c">OTP</label>
                      </div>
                    </div>
  
