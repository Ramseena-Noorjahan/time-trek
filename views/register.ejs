password.addEventListener("input", () => {
    const passwordValue = password.value;

    if (passwordValue.trim() === '') {
        password.setCustomValidity("Password cannot be blank");
    } else if (passwordValue.length < 6) {
        password.setCustomValidity("Minimum 6 characters required");
    } else if (!/[A-Z]/.test(passwordValue)) {
        password.setCustomValidity("At least one uppercase letter is required");
    } else if (!/[a-z]/.test(passwordValue)) {
        password.setCustomValidity("At least one lowercase letter is required");
    } else if (!/[0-9]/.test(passwordValue)) {
        password.setCustomValidity("At least one number is required");
    } else if (!/[!@#$%^&*]/.test(passwordValue)) {
        password.setCustomValidity("At least one special character is required");
    } else {
        password.setCustomValidity("");
    }
});


confirmpassword.addEventListener("input",()=>{
        if(confirmpassword.value.trim()==''){
